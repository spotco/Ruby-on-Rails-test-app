<table class="profile" summary="Profile Info">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for(@user) %>
				<%= @user.name %>
				<%= render "shared/follow_form" %>
			</h1>
			
			<% if @user.microposts.any? %>
				<h3 style="text-align:center;"><%= @user.name %>'s posts:</h3>
				<%= render "shared/display_posts", :paramz => @user.microposts %>
			<% end %>
			
		</td>
		
		<td class="sidebar round">
			<%= render "shared/user_info" %>
			<br />
			<%= render "shared/user_followstatus"%>
		</td>
	</tr>

	
</table>



	
